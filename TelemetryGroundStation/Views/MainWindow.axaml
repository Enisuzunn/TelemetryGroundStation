<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TelemetryGroundStation.ViewModels"
        x:Class="TelemetryGroundStation.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Telemetry Ground Station"
        Width="520" Height="360">

  <StackPanel Margin="20" Spacing="12">

    <TextBlock Text="Telemetry Ground Station"
               FontSize="20"
               FontWeight="Bold"
               HorizontalAlignment="Center"/>

    <StackPanel Orientation="Horizontal" Spacing="10">
      <Button Content="BaÅŸlat" Command="{Binding StartCommand}" Width="120"/>
      <Button Content="Durdur"  Command="{Binding StopCommand}"  Width="120"/>
      <TextBlock Text="{Binding StatusText}"
                 FontWeight="SemiBold"
                 VerticalAlignment="Center" Margin="10,0,0,0"/>
    </StackPanel>

    <Border Padding="12" CornerRadius="8" BorderThickness="1">
      <StackPanel Spacing="8">
        <TextBlock Text="{Binding Altitude, StringFormat=Altitude: {0:F2}}" />
        <TextBlock Text="{Binding Speed, StringFormat=Speed: {0:F2}}" />
        <TextBlock Text="{Binding Temperature, StringFormat=Temperature: {0:F2}}" />
        <TextBlock Text="{Binding Longitude, StringFormat=Longitude: {0:F6}}" />
        <TextBlock Text="{Binding Latitude, StringFormat=Latitude: {0:F6}}" />
        <TextBlock Text="{Binding TimeStampText, StringFormat=Time: {0}}" />
      </StackPanel>
    </Border>

  </StackPanel>
</Window>
